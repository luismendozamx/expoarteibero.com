<h1>Listing art_pieces</h1>

<table>
  <thead>
    <tr>
      <th>Discipline</th>
      <th>Title</th>
      <th>Date of</th>
      <th>Dimensions</th>
      <th>Technique</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Observations</th>
      <th>Exhibit text</th>
      <th>Artist statement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @art_pieces.each do |art_piece| %>
      <tr>
        <td><%= art_piece.discipline %></td>
        <td><%= art_piece.title %></td>
        <td><%= art_piece.date_of %></td>
        <td><%= art_piece.dimensions %></td>
        <td><%= art_piece.technique %></td>
        <td><%= art_piece.description %></td>
        <td><%= art_piece.quantity %></td>
        <td><%= art_piece.observations %></td>
        <td><%= art_piece.exhibit_text %></td>
        <td><%= art_piece.artist_statement %></td>
        <td><%= link_to 'Show', art_piece %></td>
        <td><%= link_to 'Edit', edit_art_piece_path(art_piece) %></td>
        <td><%= link_to 'Destroy', art_piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

